<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center">

    <TextView
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:text="В этой программе нужно ввести номер журнала, после нажимаем скачать и подтвеждаем скачку. Также можно нажать кнопку посмотреть, где откроется скаченный вами журнал, а также его можно удалить." />

    <CheckBox
        android:id="@+id/popupState"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="Больше не показывать" />
</LinearLayout>